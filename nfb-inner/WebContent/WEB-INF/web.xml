<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:web="http://xmlns.jcp.org/xml/ns/javaee">
	<display-name>wxbank-manage</display-name>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<listener>
		<listener-class>com.grgbanking.inner.listener.InitServletContextListener</listener-class>
	</listener>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:config/spring/applicationContext.xml,
			classpath:config/spring/applicationContext_quartz.xml
		</param-value>
	</context-param>

	<filter>
		<filter-name>popedomFilter</filter-name>
		<filter-class> com.grgbanking.inner.filter.PopedomFilter</filter-class>
		<init-param>
			<param-name>skipUnLoginRequestPattern</param-name>
			<param-value>/sys/login.do,/sys/logout.do</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>popedomFilter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>

	<!-- 记录系统日志过滤器 -->
	<filter>
		<filter-name>SysLogFilter</filter-name>
		<filter-class>com.grgbanking.inner.filter.SysLogFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>SysLogFilter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>paramsFilter</filter-name>
		<filter-class>com.grgbanking.inner.filter.ParamsFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>paramsFilter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>spring</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:config/spring/spring-servlet.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>spring</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>login.html</welcome-file>
	</welcome-file-list>
</web-app>
